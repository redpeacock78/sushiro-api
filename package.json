{
  "name": "ls-ts-boilerplate",
  "version": "1.0.0",
  "main": "index.js",
  "author": "redpeacock78 <redpeacock78@dev.tamakasu.ga>",
  "license": "MIT",
  "scripts": {
    "build": "lsc -cbo dist src",
    "test": "jest",
    "lint": "ls-lint 'src/**/*.ls?(on)' && eslint 'test/**/*.[tj]s && textlint *'",
    "lint-fix": "eslint --fix 'test/**/*.[tj]s' && textlint --fix *"
  },
  "dependencies": {
    "livescript": "^1.6.0",
    "typescript": "^4.5.4"
  },
  "devDependencies": {
    "@types/jest": "^27.0.3",
    "@types/node": "^17.0.0",
    "@typescript-eslint/eslint-plugin": "^5.7.0",
    "@typescript-eslint/parser": "^5.7.0",
    "eslint": "^8.5.0",
    "eslint-config-prettier": "^8.3.0",
    "jest": "^27.4.5",
    "livescript-jest": "^0.2.0",
    "ls-lint": "^0.1.2",
    "prettier": "^2.5.1",
    "textlint": "^12.1.0",
    "textlint-plugin-jsx": "^1.1.2",
    "textlint-rule-preset-ja-spacing": "^2.2.0",
    "textlint-rule-preset-ja-technical-writing": "^7.0.0",
    "ts-jest": "^27.1.2"
  },
  "jest": {
    "testEnvironment": "node",
    "transform": {
      "^.+\\.ls$": "livescript-jest",
      "^.+\\.(j|t)sx?": "ts-jest"
    },
    "moduleFileExtensions": [
      "js",
      "jsx",
      "json",
      "ls",
      "ts",
      "tsx"
    ]
  }
}
